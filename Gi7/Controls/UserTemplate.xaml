<UserControl x:Class="Gi7.Controls.UserTemplate" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
             FontFamily="{StaticResource PhoneFontFamilyNormal}" FontSize="{StaticResource PhoneFontSizeNormal}"
             Foreground="{StaticResource PhoneForegroundBrush}" d:DesignHeight="480" d:DesignWidth="480">

  <StackPanel Orientation="Horizontal" Margin="0,2" Tap="StackPanel_Tap">
    <Image Source="{Binding Path=AvatarUrl}" Width="50" Height="50" />
    <TextBlock Text="{Binding Login}" FontSize="26" VerticalAlignment="Center" Margin="10,0,0,0" />
  </StackPanel>
</UserControl>